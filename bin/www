#!/usr/bin/env node

'use strict';

var express = require('express');
var targetEnv = process.env.target || 'dev';
var config = require('../src/config/environment')[targetEnv];

// # Setup Express App
var app = express();
require('../src/config/express')(app, config, targetEnv);

// # Setup Database
var sequelize = require('../lib/conf/sequelize')();
//require('./models')(sequelize);

// # Start Express App
app.listen(config.port);
console.log('Garcon at your service on Port: ' + config.port);

// # Bootstrap App
require('../src/config/bootstrap')(app);
